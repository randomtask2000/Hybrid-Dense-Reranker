# Anthropic Claude API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: Flask configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Corpus Configuration
# Options: 'default' (hardcoded legal documents) or 'mormon' (load from mormon13short.txt)
CORPUS_SOURCE=default

# Text chunking configuration (only applies when CORPUS_SOURCE=mormon)
# Maximum number of characters per chunk
CHUNK_SIZE=1000

# Number of characters to overlap between chunks (helps maintain context)
CHUNK_OVERLAP=100